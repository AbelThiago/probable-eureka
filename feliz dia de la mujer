        // Función para mostrar una frase aleatoria
        function mostrarFraseAleatoria() {
            var indiceAleatorio = Math.floor(Math.random() * frases.length);
            var fraseSeleccionada = frases[indiceAleatorio];
            document.getElementById('fraseAleatoria').innerText = fraseSeleccionada;
        }

        // Mostrar una frase aleatoria al cargar la página
        document.addEventListener('DOMContentLoaded', mostrarFraseAleatoria);
